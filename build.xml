<project name="Leader" basedir=".">
	<taskdef name="jsmin" classname="net.matthaynes.jsmin.JSMin_Task" classpath="ant/jsmin.0.2.2.jar">
	 
	</taskdef>

	<tstamp>
		<format property="TSTAMP" pattern="yyyy/MM/dd hh:mm aa" locale="en"/>
	</tstamp>
	
	<target name="jscompress">
		<exec executable="tools/minimizejs" dir="tools/"/>
	</target>
		
	<target name="hg" depends="jscompress">
		<exec executable="/opt/local/bin/hg">
			<arg line="pull"/>
			<arg line="-u"/>
		</exec>
		<exec executable="/opt/local/bin/hg">
		<arg line="merge"/>
		</exec>
		 <input
		    message="commit message"
		    addproperty="commitMsg"
		  />
		<exec executable="/opt/local/bin/hg">
			<arg line="commit -m '${commitMsg}'"/>
		</exec>
		<exec executable="/opt/local/bin/hg">
			<arg line="push"/>
		</exec>
	</target>
</project>

